{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/inquiryHistory/inquiryHistory",
			"style": {
				"navigationBarTitleText": "询价历史",
				"navigationBarTextStyle": "white",
				"navigationBarTextWeight": "bold",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/inquiry/inquiry",
			"style": {
				"navigationBarTitleText": "询价",
				"navigationBarTextStyle": "black",
				"navigationBarTextWeight": "bold",
				"navigationBarBackgroundColor": "#fff",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/inquiryResult/inquiryResult",
			"style": {
				"navigationBarTitleText": "询价结果",
				"navigationBarTextStyle": "white",
				"navigationBarTextWeight": "bold",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/warehouseReceipts/warehouseReceipts",
			"style": {
				"navigationBarTitleText": "仓单",
				"navigationBarTextStyle": "black",
				"navigationBarTextWeight": "bold",
				"navigationBarBackgroundColor": "#fff",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/calculator/calculator",
			"style": {
				"navigationBarTitleText": "计算器",
				"navigationBarTextStyle": "black",
				"navigationBarTextWeight": "bold",
				"navigationBarBackgroundColor": "#fff",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/user/user",
			"style": {
				"navigationBarTitleText": "用户中心",
				"navigationBarTextStyle": "white",
				"navigationBarTextWeight": "bold",
				"enablePullDownRefresh": true
			}
		}
	],
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#3cc51f",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [
			{
				"pagePath": "pages/inquiryHistory/inquiryHistory",
				"iconPath": "static/logo.png",
				"selectedIconPath": "static/logo.png",
				"text": "询价历史"
			},
			{
				"pagePath": "pages/warehouseReceipts/warehouseReceipts",
				"iconPath": "static/logo.png",
				"selectedIconPath": "static/logo.png",
				"text": "仓单"
			},
			{
				"pagePath": "pages/calculator/calculator",
				"iconPath": "static/logo.png",
				"selectedIconPath": "static/logo.png",
				"text": "计算器"
			},
			{
				"pagePath": "pages/user/user",
				"iconPath": "static/logo.png",
				"selectedIconPath": "static/logo.png",
				"text": "我的"
			}
		]
	},
	"globalStyle": {
		"navigationStyle": "default",
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarTextSize": "uni-app",
		"navigationBarBackgroundColor": "#d6423a",
		"backgroundColor": "#f5f5f5"
	}
}
